{
  "compilerOptions": {
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./**/*"]
}
